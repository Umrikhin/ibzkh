@model List<Room>
@{
    ViewBag.Title = "Помещения";
}
<div class="m-1 p-1">
    <h2>Список помещений</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr><th>Код</th><th>ЛС</th><th>Площадь, м<sup>2</sup></th><th class="text-center">Действие</th></tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td>@row.Id</td>
                    <td>@row.NumBill</td>
                    <td>@row.Area.ToString("#.##")</td>
                    <td align="center">
                        <a class="btn btn-sm btn-info" asp-action="Index" asp-controller="Profit" asp-route-Id="@row.Id">Начисления</a>
                        <a class="btn btn-sm btn-warning" asp-action="Index" asp-controller="Status" asp-route-Id="@row.Id">Состояние счета</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Всего помещений:</td>
                <td class="text-center">
                    <b>@Model.Count().ToString()</b>
                </td>
            </tr>
        </tfoot>
    </table>
</div>